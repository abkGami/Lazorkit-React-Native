# Lazorkit React Native Example - Environment Configuration

# Network Configuration
# Options: devnet, mainnet
EXPO_PUBLIC_NETWORK=devnet

# RPC Endpoint
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
EXPO_PUBLIC_RPC_URL=https://api.devnet.solana.com

# Lazorkit Portal URL
# This is the web portal used for key management and transaction simulation
EXPO_PUBLIC_PORTAL_URL=https://portal.lazor.sh

# Paymaster Service URL
# Handles fee sponsorship for gasless transactions
EXPO_PUBLIC_PAYMASTER_URL=https://lazorkit-paymaster.onrender.com

# Deep Link Configuration
# Used for handling authentication redirects
EXPO_PUBLIC_DEEP_LINK_SCHEME=lazorkit

# Feature Flags
# Enable/disable specific features
EXPO_PUBLIC_ENABLE_GASLESS=true
EXPO_PUBLIC_ENABLE_SWAPS=false
EXPO_PUBLIC_ENABLE_BILLING=true
EXPO_PUBLIC_ENABLE_SESSION_KEYS=true

# Token Configuration
# USDC Mint Address (Devnet)
EXPO_PUBLIC_USDC_MINT=EPjFWdd5Au57nqb255heH41CvqAstksNQm7meWsan5

# Maximum transaction amount (in token units)
EXPO_PUBLIC_MAX_TRANSACTION_AMOUNT=10000

# Session timeout (in milliseconds)
EXPO_PUBLIC_SESSION_TIMEOUT=3600000

# Enable debug logging
EXPO_PUBLIC_DEBUG=false
